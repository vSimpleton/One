<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:paddingBottom="20dp">

    <ImageView
        android:id="@+id/ivTopImg"
        android:layout_width="match_parent"
        android:layout_height="250dp"
        android:scaleType="centerCrop"
        android:src="@drawable/default_top_bg"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"/>

    <TextView
        android:id="@+id/tvType"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="摄影  Sherry"
        android:layout_marginTop="18dp"
        android:textSize="12sp"
        android:textColor="@color/_808080"
        app:layout_constraintTop_toBottomOf="@+id/ivTopImg"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"/>

    <TextView
        android:id="@+id/tvContent"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="我当然不会试图摘月，我要月亮奔我而来。"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:textColor="@color/_333333"
        android:textSize="14sp"
        android:layout_marginTop="30dp"
        app:layout_constraintTop_toBottomOf="@+id/tvType"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"/>

    <TextView
        android:id="@+id/tvAuthor"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="奥黛丽 赫本"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="30dp"
        android:textSize="13sp"
        android:textColor="@color/_808080"
        app:layout_constraintTop_toBottomOf="@+id/tvContent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"/>

    <TextView
        android:id="@+id/tvDiscovery"
        android:layout_width="wrap_content"
        android:layout_height="30dp"
        android:text="发现"
        android:drawableLeft="@drawable/ic_discovery"
        android:drawablePadding="3dp"
        android:textSize="11sp"
        android:gravity="center_vertical"
        app:layout_constraintTop_toBottomOf="@+id/tvAuthor"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginTop="25dp"
        android:layout_marginLeft="15dp"/>

    <ImageView
        android:id="@+id/ivLike"
        android:layout_width="wrap_content"
        android:layout_height="30dp"
        android:src="@drawable/ic_like_normal"
        android:layout_gravity="center_vertical"
        android:layout_marginTop="25dp"
        android:layout_marginStart="20dp"
        app:layout_constraintRight_toLeftOf="@+id/tvLikeCount"
        app:layout_constraintTop_toBottomOf="@+id/tvAuthor"/>

    <TextView
        android:id="@+id/tvLikeCount"
        android:layout_width="wrap_content"
        android:layout_height="30dp"
        android:text="1326"
        android:textColor="#98a1aa"
        android:textSize="10sp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tvAuthor"
        android:layout_marginTop="25dp"
        android:layout_marginEnd="10dp"/>

    <ImageView
        android:id="@+id/ivDairy"
        android:layout_width="wrap_content"
        android:layout_height="30dp"
        android:src="@drawable/ic_diary"
        android:layout_centerVertical="true"
        android:layout_marginEnd="20dp"
        app:layout_constraintTop_toTopOf="@+id/ivCollect"
        app:layout_constraintRight_toLeftOf="@+id/ivCollect"/>

    <ImageView
        android:id="@+id/ivCollect"
        android:layout_width="wrap_content"
        android:layout_height="30dp"
        android:src="@drawable/ic_collect_normal"
        android:layout_centerVertical="true"
        android:layout_marginEnd="20dp"
        app:layout_constraintTop_toTopOf="@+id/ivShare"
        app:layout_constraintRight_toLeftOf="@+id/ivShare"/>

    <ImageView
        android:id="@+id/ivShare"
        android:layout_width="wrap_content"
        android:layout_height="30dp"
        android:src="@drawable/ic_share"
        app:layout_constraintRight_toLeftOf="@+id/ivLike"
        app:layout_constraintTop_toTopOf="@+id/ivLike"
        android:layout_centerVertical="true"
        android:layout_marginEnd="20dp"/>

</androidx.constraintlayout.widget.ConstraintLayout>