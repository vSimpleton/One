<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:paddingLeft="15dp"
    android:paddingTop="10dp"
    android:paddingBottom="10dp">

    <ImageView
        android:id="@+id/ivUserIcon"
        android:layout_width="46dp"
        android:layout_height="60dp"
        android:scaleType="centerCrop"
        android:src="@drawable/default_top_bg"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_toRightOf="@+id/ivUserIcon">

        <TextView
            android:id="@+id/tvUserName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="柚子啊"
            android:textStyle="bold"
            android:layout_marginLeft="13dp"
            android:textSize="14sp"
            android:textColor="@color/_333333"
            android:layout_marginTop="4dp"
            app:layout_constraintTop_toTopOf="@+id/ivUserIcon"
            app:layout_constraintLeft_toRightOf="@+id/ivUserIcon" />

        <TextView
            android:id="@+id/tvContent"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintLeft_toRightOf="@+id/ivUserIcon"
            app:layout_constraintTop_toBottomOf="@+id/tvUserName"
            android:text="柚子是个大傻瓜急啊急啊急啊柚子是个大傻瓜急啊急啊急啊柚子是个大傻瓜急啊急啊急啊"
            android:maxLines="3"
            android:ellipsize="end"
            android:layout_marginTop="7dp"
            android:layout_marginLeft="13dp"
            android:textSize="12sp"
            android:lineSpacingExtra="3dp"
            android:textColor="@color/_808080"
            android:layout_marginRight="20dp"
            app:layout_constraintRight_toRightOf="parent"/>
    </LinearLayout>

</RelativeLayout>